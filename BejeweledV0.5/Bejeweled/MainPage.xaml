<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" xmlns:local="clr-namespace:Bejeweled" x:Class="Bejeweled.MainPage"
    d:DesignWidth="700" d:DesignHeight="600">
  <Grid x:Name="LayoutRoot" Width="700" Height="600">
  	<Grid.Background>
  		<ImageBrush ImageSource="Images/backdrop00.jpg"/>
  	</Grid.Background>
        
  	<local:Bejeweled x:Name="GameMain" HorizontalAlignment="Left" VerticalAlignment="Top" />
  	<TextBlock x:Name="tbStartGame" Margin="184,0,278,128" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" FontSize="29.333" Text="Start Game" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
  	<local:Score x:Name="GameScore" HorizontalAlignment="Right" d:LayoutOverrides="Width"/>
        
  </Grid>
</UserControl>
